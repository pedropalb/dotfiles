#!{{ lookPath "bash" }}

{{ if eq .chezmoi.os "android" -}}
pkg update
pkg install {{ .packages.android.pkg | join " " }}
{{ else if (and (eq .chezmoi.os "linux") (or (eq .chezmoi.osRelease.id "debian") (eq .chezmoi.osRelease.id "ubuntu"))) }}
sudo apt-get update 
sudo apt-get install {{ .packages.linux.apt | join " " }}
{{ else }}
# other operating system
{{ fail "No specification for this OS in .chezmoidata/packages.yaml" }}
{{ end }}
